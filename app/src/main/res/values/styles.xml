<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionButtonStyleGrey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/round_action_button_grey</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="NumberButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/round_number_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/whiteCharacters</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ZeroButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/zero_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/whiteCharacters</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ActionButtonStyleOrange">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/round_action_button_orange</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/whiteCharacters</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>




</resources>
